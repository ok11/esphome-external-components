{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "C_Cpp.errorSquiggles": "enabled",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.configureOnOpen": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.ctest.testExplorerIntegrationEnabled": false,
    "cmake.configureSettings": {
        "ENABLE_COVERAGE": "ON"
    },
    "testing.coverageToolbarEnabled": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "cmake.coverageInfoFiles": [
        "${workspaceFolder}/tests/unit/build/coverage/coverage_filtered.info"
    ],
    "coverage-gutters.coverageFileNames": [
        "coverage_filtered.info"
    ],
    "coverage-gutters.coverageReportFileName": "coverage/html/index.html",
    "coverage-gutters.ignoredPathGlobs": "**/.esphome/**",
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    "coverage-gutters.showGutterCoverage": true,
    "coverage-gutters.highlightdark": "rgba(45, 121, 10, 0.2)",
    "coverage-gutters.highlightlight": "rgba(45, 121, 10, 0.2)",
    "coverage-gutters.partialHighlightDark": "rgba(226, 151, 4, 0.2)",
    "coverage-gutters.partialHighlightLight": "rgba(226, 151, 4, 0.2)",
    "coverage-gutters.noHighlightDark": "rgba(209, 4, 4, 0.2)",
    "coverage-gutters.noHighlightLight": "rgba(209, 4, 4, 0.2)",
    "testMate.cpp.test.executables": "build/**/*test*"
}
